{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~server-model/*": ["../server-model/src/*"]
    }
  },
  "references": [{ "path": "../server-model" }]
}
